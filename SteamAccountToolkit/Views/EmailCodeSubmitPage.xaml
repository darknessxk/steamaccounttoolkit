<UserControl x:Class="SteamAccountToolkit.Views.EmailCodeSubmitPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:SteamAccountToolkit"
             xmlns:prism="http://prismlibrary.com/"
             Height="450" Width="800"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/shared"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label HorizontalAlignment="Center" Content="Submit Email Code" FontSize="20" />
        <TextBox Text="{Binding EmailCode, Mode=TwoWay}" Margin="20, 0, 20, 0" />
        <Button Content="Submit" Command="{Binding SubmitEmailCodeCommand}" Margin="20" />
    </StackPanel>
</UserControl>